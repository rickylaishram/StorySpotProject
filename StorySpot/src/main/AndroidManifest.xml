        <activity
            android:name="com.storyspot.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="3" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
